.ocultar
	display none

.rec
	a
		color #DA002C
		text-shadow 0px 0px 5px #F39292
		&:hover
			background-color transparent
			color #008400
			text-shadow 0px 0px 5px #119E00

.Git__wait
	box-shadow 0px 0px 5px #999
	width 60%
	margin 5em auto
	// padding 1em
	background-color white
	&Title
		font-size 1.5em
		padding .5em
		background-color crimson
		color white
	&Text
		padding .5em
		font-size 1.5em

.Git
	background-color #f5f7f8
	margin-top 60px
	width 100%
	&__box
		width 100%
		margin 0 auto
	&__class
		width 90%
		margin 0 auto
	&__title
		color white
		box-sizing border-box
		background-image url('../../image/git.png')
		background-color #9D0400
		text-align left
		background-repeat no-repeat
		background-size contain
		width 100%
		font-size 1.8em
		padding .7em 0 .7em 3em
	&__classContent
		margin-top 1.5em
		width 100%
	&__linkClass
		text-decoration none
	&__content
		border 1px solid rgba(232, 42, 37, 0.99)
		margin-bottom 1em
		height 102px
		align-items center
		flex-direction row
		display flex
		// margin-bottom 1.5em
		width 100%
		border-radius 5px
		background-color white
		// padding-bottom 1em
	&__contentTheme
		background-color rgba(232, 42, 37, 0.99)
		// min-width 70px
		height 102px
		border-radius 3px 0 0 3px
	&__icon
		color rgba(252, 252, 252, 0.44)
		font-size 80px
		line-height 102px
	&__contentText
		color #252525
		margin-left .5em
		text-align left
	&__titleClass
		font-size 1.7em
	&__textClass
		font-size 1.4em
	&__hashtag 
		display none		
				
@media screen and (min-width 1000px)
	.Git
		&__class
			display flex
			flex-direction row
			margin 0
			width 100%
		&__classContent
			margin 1.1em 0
			height 495px
			width 70%
			overflow-y scroll
			scroll()
		&__content
			width 95%
			margin 0 auto 1em auto
		&__contentText
			margin-left 1em
		&__contentEnd
			margin 0 auto
		&__hashtag
			margin .7em 1em
			padding .2em 0
			display block
			width 30%