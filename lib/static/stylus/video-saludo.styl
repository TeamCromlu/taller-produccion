@font-face
  font-family 'icomoon'
  src url('../fonts-video/icomoon.eot?ploybc')
  src url('../fonts-video/icomoon.eot?ploybc#iefix') format('embedded-opentype'),
  url('../fonts-video/icomoon.ttf?ploybc') format('truetype'),
  url('../fonts-video/icomoon.woff?ploybc') format('woff'),
  url('../fonts-video/icomoon.svg?ploybc#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-window
  &:before
    content "\e900"

.icon-terminal
  &:before
    content "\f0c8"

.icon-feed
  &:before
    content "\e901"

.icon-mic
  &:before
    content "\e902"

.icon-play
  &:before
    content "\e903"



.Conviction
	height auto
	whith 100%
	background url('../image/12.jpg')
	background-color #1C1E1F
	background-size cover
	background-repeat no-repeat
	padding-top 5em
	padding-bottom 5em
	&__box
		margin auto
		width 80%
		text-align center
		padding 3em 0
		h2
			text-shadow 1px 1px 2px #282828
			font-size 2em
			color white
			
	&__teach
		width 100%
		height auto
		
		.video-content
			height 0
			padding-bottom 56.25%
			position relative
			overflow hidden
		iframe,
		object,
		embed,
		video
			width 100%
			height 100%
			position absolute
			right 0
			left 0
			
		.teach__beneficios
			text-align center
			margin 0 auto
			padding-top 2em
			padding-bottom 2em
			
			&--box
				text-align center
				padding .7em
				
			&--icon
				color white
				text-decoration none
				display block
				vertical-align middle
				padding .7em
				font-size 3em
				
			&--texto
				margin-left .5em
				color white
				text-align center
				display block
				vertical-align middle
				font-size 1.1em
				

@media screen and (min-width 764px)
	.Conviction
		padding-top	4em
		padding-bottom	4em
		&__box
			// width 60%
			padding	1em 0
			h2
				font-size 3em
				
		&__teach
			text-align	center
			margin	0 auto
			padding-top	2em
			padding-bottom	2em
			.teach__video
				width 61%
				display inline-block
				vertical-align middle

			.teach__beneficios
				width 30%
				text-align left
				display inline-block
				vertical-align top
				padding-bottom 3.5em
				margin-top -2em
				
				&--box
					text-align left
					width 100%
					padding	 0
					
				&--icon
					display inline-block
					text-shadow 1px 1px 2px #000
					vertical-align middle
					width 2%
					
				&--texto
					text-shadow 1px 1px 2px #000
					display inline-block
					vertical-align middle
					width 60%
					font-size 1.1em
					



@media screen and (min-width 1200px)
	.Conviction
		padding-top	5em
		padding-bottom	5em
		&__box
			// width 60%
			padding	1em 0
			h2
				font-size 3em
				
		&__teach
			text-align	center
			margin	0 auto
			padding-top	2em
			padding-bottom	2em
			.teach__video
				width 600px
				height 400px	

			.teach__beneficios
				width 30%
				
				&--texto
					width 71%
					font-size 1.3em
