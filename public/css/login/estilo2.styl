@import 'nib'
*
	margin 0
	padding 0
	
body
	background #f2f2f2
	font-family Open Sans
	color #2e2f33
.Header-Main
	background white
	&__box
		text-align left
		padding-top .5em
		padding-bottom .5em
	&__logo
		display block
		margin-left 1em
		a
			text-decoration none
			color #3a3a3a
			font-family  'Arial' sans-serif
			img
				width 50px
				display inline-block
				vertical-align middle
			h1
				display inline-block
				vertical-align middle
				font-size 1.5rem
	
	
.Networking
	&__box
		background white
		max-width 500px
		height auto
		padding 1.5em
		margin 3em auto
		text-align center
	h2 
		text-align center
		font-size 1.8em
	a
		color white
		display block
		padding 1em
		font-size 1.2em
		text-decoration none
		border-radius 10px
		margin 1em 3em
		&.color-facebook
			background #3b5998
		&.color-twitter
			background #54ABEE
	.ingresa-curso
		display block
		padding .5em
		color blue
		
		
@media (min-width 768px)
	.happy
		&__box
			padding 4em
			padding-top 1em