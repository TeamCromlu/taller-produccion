.Temary
	background-color #f5f7f8
	width 100%
	background-color white
	&__box
		width 90%
		margin 0 auto
		padding 1em 0
	&__content
		width 100%
		max-width 400px
		margin 1em auto 3em auto
	&__list
		box-sizing border-box
		// padding .5em
		display block
		width 100%
		margin-bottom 1em
		&--title
			text-align center
			font-size 1.7em
			margin-bottom .5em
	&__listContent
		&--list
			width 100%
		&--content
			// padding-left 2em
			list-style none
			margin 1em 0
			display flex
		&--text 
			// display inline-block
			font-size 1.3em
			// font-weight bold
			// width 90%
		&--icon
			// width 10%
			margin-right .5em
			// display inline-block
			font-size 1.3em
	&__workshop
		background-color #efefef
		margin 0 auto
		box-sizing border-box
		border-radius 5px
		width 100%
		max-width 400px
		display block
		padding .5em
		&--box
			// box-sizing border-box
			// padding .5em
			width 100%
		&--title
			text-align center
			font-size 1.7em
			margin .5em 0
		&--logo
			margin .5em auto
			width 200px
		&--image
			width 100%
			border-radius 50%
		&--button
			width 90%
			margin 1em auto
			text-align center
			background-color #226fbe
			border 3px solid #226fbe
			// border 3px solid white
			border-radius 50px
			transition .3s
			&:hover
				border 3px solid #1B538C
				background-color white
				a.Temary__workshop--actionButton
					color #1B538C
					
		&--actionButton
			display block
			padding .5em
			font-size 1.5em
			font-weight bold
			color white
			text-decoration none
			

@media screen and (min-width 767px)
	.Temary
		&__box
			padding 4em 0 1em 0
			width 90%
			display flex
			max-width 900px
			justify-content space-between
			// flex-direction row
			align-items center
		&__content
			margin 0
			// padding 2em
			width 50%
		&__workshop
			margin 0
			// padding 2em
			width 50%