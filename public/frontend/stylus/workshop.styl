.Workshop
	padding 2em 0
	background-color white
	// background-color #f5f7f8
	box-sizing border-box
	width 100%
	// padding 1em
	&__box
		// width 90%
		margin 0 auto
	&__title
		text-align center
		padding .5em
		font-size 2em
		// margin-bottom 1em
	&__content
		width 100%
	&__contentBox
		padding .5em 0
		max-width 300px
		border-radius 5px
		width 90%
		margin 1em auto 2em auto
		// background-color #CDCDCD
	&__contentIcons
		display flex
		justify-content center
		&--live, &--micro
			font-size 2.5em
			margin .5em .3em
			color #202020
	&__contentTitle
		&--title
			font-size 1.5em
			text-align center
			margin .5em
	&__contentText
		&--text
			text-align center
			font-size 1.2em
			width 90%
			margin .5em auto
			
@media screen and (min-width 767px)
	.Workshop
		&__contentBox
			width 45%
			display inline-block
			margin 1em 2%
			// float right
			// height 200px
			vertical-align top
			
@media screen and (min-width 1000px)
	.Workshop
		&__contentBox
			width 21%
			// height 300px
			margin 1em 1.8%
			