.Convince
	height auto
	background url('../image/4.jpg')
	background-color #4E4D4B
	background-size cover
	background-repeat no-repeat
	&__box
		padding 3em 0
		margin auto
		text-align center
		width 90%
		h2
			text-shadow 1px 1px 2px black
			color white
			font-size 3em


@media screen and (min-width 764px)
	.Convince
		height auto
		&__box
			padding 5em 0
			h2
				font-size 3.5em