.Process
	padding-bottom 3em
	padding-top 4em
	background-color white
	&__box
		margin auto
		text-align center
		width 90%
	&__text
		padding 1em 0
		h2
			color color__gris
			font-size 2.5em
	&__arts
		width 100%
		margin auto
		padding 1em 0
	&__cajas
		margin 1em .5em		
		max-width 300px
		border-radius 15px
		text-align center
		display inline-block
		vertical-align top
		h3
			color gris__subtitulo
			padding .5em
			font-size 1.7em
		img
			width 230px
			border-radius 50%
		h4
			margin auto
			width 85%
			padding-top 2em
			font-size 1.2em
		p 
			margin auto
			width 85%
			padding 1em .5em
			color #484848

@media screen and (min-width 764px)
	.Process
		padding 3em 0
		&__text
			h2
				font-size 3.5em
		&__cajas
			h4
				font-size 1.3em
			p
				font-size 1.2em


@media screen and (min-width 1000px)
	.Process
		&__cajas
			margin 0 .5em
			width 22%
			img
				width 60%
			