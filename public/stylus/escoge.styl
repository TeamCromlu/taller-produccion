.escoge
	overflow hidden
	background #FFF
	&__box
		width 100%
		margin 0 auto
		text-align center
		padding-top 6em
		padding-bottom 2em
	&__title
		display block
		width 100%
		text-align center
		margin 0 auto
		h2
			font-size title_h2
			color color__gris
		p
			font-size size_p
			color gris__subtitulo
	&__modelos
		display block
		width 100%
		padding-top 1em
		.modelos--item			
			margin-top 2em
			display block
			width 100%
			position relative
			h3
				color gris_letra
			figure
				width 100%
				padding-top .8em
				img
					max-width 90%
					&:hover
						background #61402C
						box-shadow rgb(255, 82, 0) 0px 0px 28px
	&__modelos--ver
		position absolute
		top 50%
		background rgba(0, 195, 177, 0.66)
		color white
		padding .8em
		width 90px
		display block
		margin 0 auto
		right 0
		left 0
		text-decoration none
		
		&:hover
			padding: 1.2em;
			background: rgba(0, 195, 177, 0.92);
			transition: .2s;
															
@media (min-width 768px)
	.escoge
		padding 0
		&__box
			width 100%
			text-align center
			magin 0 auto
		&__title
			display block
			width 100%
			h2
				font-size 3.2em
			p
				font-size 2em
		&__modelos
			display block
			width 100%
			.modelos--item
				margin-top 2em
				display inline-block
				width 45%
				
@media (min-width 1000px)
	.escoge
		&__box
			width 100%
			text-align center
			margin 0 auto
		&__title
			display block
			width 100%
		&__modelos
			width 100%
			display block 
			.modelos--item
				display inline-block
				width 30%
		
