.Video
	display inline-block
	margin-top 70px
	bottom 0
	// align-items flex-start
	// align-items stretch
	// flex-wrap wrap
	// flex-direction column
	// margin 1em 0
	// position relative
	// z-index 85
	vertical-align top
	width 100%
	&__box
		display block
		position relative
		border-radius 5px
		// background #CBF0FF
		width 99%
		margin 0 auto
	&__video
		width 100%
		background-color white
		box-shadow 0px 0px 5px #999
		margin 0 auto
	&__title
		width 100%
		margin 0 auto
		h2
			color white
			background-color #167ac6
			font-size 1.5em
			padding .5em
			// background-color white


.video
	height 0
	padding-bottom 56.25%
	position relative
	overflow hidden
	
iframe,
object,
embed,
video
	width 100%
	height 100%
	position absolute
	right 0
	left 0
	
@media screen and (min-width 767px)
	.Video
		// height 82vh
		// height auto
		margin 75px 5px 5px
		// display inline-block
		width 60%
		&__box
			// padding 10px
			width 95%
			height auto