.Video
	display inline-block
	top 65px
	bottom 0
	// align-items flex-start
	// align-items stretch
	// flex-wrap wrap
	// flex-direction column
	// margin 1em 0
	position relative
	// z-index 85
	vertical-align top
	width 100%
	&__box
		display block
		position relative
		border-radius 5px
		// background #CBF0FF
		width 99%
		margin 0 auto
	&__video
		box-shadow 0px 0px 5px #999
		background-color white
		width 100%
		margin 0 auto
	&__title
		width 100%
		margin 0 auto
		h2
			color white
			background-color #4ECC63
			font-size 1em
			padding .5em


.video
	height 0
	padding-bottom 56.25%
	position relative
	overflow hidden
	
iframe,
object,
embed,
video
	width 100%
	height 100%
	position absolute
	right 0
	left 0
	
@media screen and (min-width 480px)
	.Video
		&__title
			font-size 1.3em
@media screen and (min-width 767px)
	.Video
		height 82vh
		// height auto
		margin 0 5px
		// display inline-block
		width 60%
		&__box
			// padding 10px
			width 95%
			height auto
		&__title
			font-size 1.5em