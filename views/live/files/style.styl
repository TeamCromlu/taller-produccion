.Files
	display block
	box-shadow 0px 0px 5px #999
	background-color white
	width 99%
	margin .4em auto 0 auto
	height 150px
	// position relative
	// flex-direction column
	// align-items stretch
	// display flex
	// height 20vh
	// margin 0 auto
	// display inline-block
	// border-radius 5px
	&__box
		// position absolute
		// top 0
		// bottom 0
		// display flex
		// align-items stretch
		// padding .5em
		text-align center
		// width 100%
		height auto
	&__button
		margin-bottom .5em
		margin-top 0.4em
	&__link
		// list-style none
		display block
		width 90%
		margin 0 auto
		height auto
		a
			width 100%
			max-width 190px
			color white
			margin 0 auto
			display block
			font-weight bold
			// width 60%
			// box-sizing border-box
			background-color #00C82A
			border-radius 5px
			border-bottom 4px solid #299D00
			padding .4em
			font-size 1.3em
			text-decoration none
			&:hover
				background-color red
				border-bottom 4px solid #A0112E
	// &__text
	// 	margin 0 auto
	// 	// width 90%
	&__title
		background-color #034C77
		// width
		font-weight bold
		color white
		font-size 1.5em
		padding .3em
	&__document
		width 95%
		margin 0 auto
		border-radius 5px
		height 50px
		background white
