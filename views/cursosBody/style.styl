fondos()
	background-repeat no-repeat
	background-size cover
	background-position center

.Courses
	// padding-top 100px
	margin-top 60px
	width 100%
	// background blue
	&__box
		margin 0 auto
		width 90%
	&__titleContent
		margin 2em 0
		text-align center
	&__titleText
		font-size 2em
	&__contentLink
		text-decoration none
		cursor pointer
	&__content
		margin 1em 0
		width 100%
		display block
	&__figure
		border-radius 7px
		display flex
		flex-direction row
		justify-content center
		align-items center
		width 100%
		height 120px
		&--frontend
			fondos()
			background-color #FFAE3B
			background-image url('../image/frontend.png')
			color #FFAE3B
		&--git
			fondos()
			background-color #9d0400
			background-image url('../image/git.png')
		&--backend
			fondos()
			background-color #00374b
			background-image url('../image/backend.png')
	&__subtitle
		text-align center
		h3
			font-size 2.7em
			color rgba(255, 255, 255, 0.69)

@media screen and (min-width 767px)
	.Courses
		margin-top 70px
		&__box
			// margin 2em 0
			width 80%
		// &__titleConten
		&__titleText
			font-size 3em
		&__content
			vertical-align top
			margin 0 1.6% 
			width 30%
			display inline-block
		// &__contentLink
		// 	margin 0
		&__figure
			height 400px